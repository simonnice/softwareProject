extends layout

block content
  .jumbotron
    form.form-horizontal(method='POST', action='/register')
      .fieldset
        #legend
          p.lead.headline Register an account!
        .control-group
          // Username
          p.lead.control-label(for='username') Username
          .controls
            input#username.input-xlarge(type='text', name='username', placeholder='Username')
      
        .control-group
          // E-mail
          p.lead.control-label(for='email') E-mail
          .controls
            input#email.input-xlarge(type='text', name='email', placeholder='name@email.com')
        
        .control-group
          // Password
          p.lead.control-label(for='password') Password
          .controls
            input#password.input-xlarge(type='password', name='password', placeholder='Input Password')
      
        .control-group
          // Password
          p.lead.control-label(for='password_confirm') Password (Confirm)
          .controls
            input#password_confirm.input-xlarge(type='password', name='confirmPassword', placeholder='Confirm Password')
       
        .control-group
          // Button
          .controls
            button.btn.btn-primary(type='submit') Register